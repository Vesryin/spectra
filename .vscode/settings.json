{
  // ============================================
  // ðŸŽ¯ SpectraAI Workspace Settings - 2025 Edition  
  // Modern development environment configuration
  // ============================================
  
  // Python configuration
  "python.defaultInterpreterPath": "./apps/api/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "strict",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "black",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["apps/api/tests"],
  
  // TypeScript/JavaScript configuration
  "typescript.preferences.strictPropertyInitialization": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Formatting and linting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  
  // File associations and patterns
  "files.associations": {
    "*.env.example": "properties",
    "*.env.local": "properties",
    "*.env.development": "properties",
    "*.env.production": "properties"
  },
  
  // Exclude patterns for better performance
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "apps/web/.next": true,
    "apps/web/.turbo": true
  },
  
  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/build": true
  },
  
  // Git configuration
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  
  // Terminal configuration
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\apps\\api"
  },
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/apps/api"
  },
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/apps/api"
  },
  
  // Language-specific settings
  "[python]": {
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  
  "[typescript]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "[typescriptreact]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "[javascript]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Testing configuration
  "jest.autoRun": "off",
  "jest.showCoverageOnLoad": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  
  // AI and productivity
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "python": true,
    "typescript": true,
    "javascript": true
  },
  
  // Workspace trust
  "security.workspace.trust.untrustedFiles": "prompt",
  
  // Notebook settings (for data science workflows)
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  
  // Integrated terminal
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  }
}
