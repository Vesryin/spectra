{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ FastAPI Development Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/apps/api/app/main.py",
      "args": [],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/api",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/api",
        "DEBUG": "true",
        "ENVIRONMENT": "development"
      },
      "justMyCode": false,
      "gevent": true
    },
    {
      "name": "üß™ Debug Python Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${workspaceFolder}/apps/api/tests",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/api",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/api",
        "ENVIRONMENT": "test"
      },
      "justMyCode": false
    },
    {
      "name": "üåê Next.js Development",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/apps/web",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "- Local:.*http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "name": "üîß Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/web/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache", "--watchAll=false"],
      "cwd": "${workspaceFolder}/apps/web",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
