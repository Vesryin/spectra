{
  "name": "spectra-ai",
  "version": "3.0.0", 
  "description": "ðŸ§  SpectraAI - Advanced AI Assistant with Emotional Intelligence (2025 Edition)",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.5.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check", 
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd apps/api && prisma generate",
    "db:push": "cd apps/api && prisma db push",
    "db:studio": "cd apps/api && prisma studio"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "turbo": "^1.12.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2",
    "@types/node": "^20.11.24"
  },
  "keywords": [
    "ai",
    "nextjs",
    "fastapi", 
    "openhermes",
    "emotional-intelligence",
    "personality",
    "memory",
    "llm",
    "2025"
  ],
  "repository": {
    "type": "git", 
    "url": "https://github.com/Vesryin/spectra.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vesryin",
    "url": "https://github.com/Vesryin"
  }
}
