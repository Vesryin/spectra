{
  "name": "spectra-ai",
  "version": "3.0.0",
  "description": "ðŸ§  SpectraAI - Advanced AI Assistant with Emotional Intelligence (2025 Edition)",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.5.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "db:generate": "cd apps/api && prisma generate",
    "db:push": "cd apps/api && prisma db push",
    "db:studio": "cd apps/api && prisma studio",
    "security:audit": "npm audit --workspaces && cd apps/api && pip-audit",
    "quality:check": "npm run lint && npm run format:check && npm run type-check",
    "ci": "npm run quality:check && npm run test"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.11.24",
    "prettier": "^3.2.5",
    "turbo": "^1.13.4",
    "typescript": "^5.4.2"
  },
  "keywords": [
    "ai",
    "nextjs",
    "fastapi",
    "openhermes",
    "emotional-intelligence",
    "personality",
    "memory",
    "llm",
    "2025"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Vesryin/spectra.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vesryin",
    "url": "https://github.com/Vesryin"
  }
}
